<?php $__env->startSection('content'); ?>
    <h2>Edit cita</h2>
 
    <?php echo Form::model($cita, ['method' => 'PATCH', 'route' => ['citas.update', $cita->slug]]); ?>

        <?php echo $__env->make('citas/partials/_form', ['submit_text' => 'Edit cita'], array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
    <?php echo Form::close(); ?>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>